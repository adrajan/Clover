<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Top section (Green Paid & Ad Section) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Left section (Payment Confirmation) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded"
            android:gravity="center"

            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:tint="@color/white"
                android:src="@drawable/checked" /> <!-- Replace with your check icon -->

            <TextView
                android:id="@+id/payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Paid $49.45"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Thank you!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Right section (Ad Section) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="16dp">

            <!-- Full image -->
            <ImageView
                android:id="@+id/full_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/adimage" /> <!-- Replace with your full image -->

            <!-- Partner ad text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top|end"
           android:paddingVertical="6dp"
                android:paddingHorizontal="13dp"
                android:background="@drawable/rounded_background"> <!-- Optional background -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner ad by Mediastreet"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            <!-- QR code placeholder (bottom-left) -->
            <ImageView
                android:id="@+id/qr_placeholder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:src="@drawable/qr"
                />
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        android:background="#FFFFFF"
        android:padding="10dp">

        <Button
            android:id="@+id/button_no_receipt"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingHorizontal="10dp"
            android:text="Send Receipt"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_margin="8dp" />


    </LinearLayout>
</LinearLayout>
